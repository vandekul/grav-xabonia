						<label>{{ field.name }}</label>
						<select id="{{ field.name }}" data-field="custom{{ loop.index }}">
							{% for option in field.options|split('|') %}
							<option value="{{ option }}">{{ option }}</option>
							{% endfor %}
						</select>
					</div>
